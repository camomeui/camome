{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/content/*": ["content/*"],
      "@/public/*": ["public/*"],
      "@/demo/*": [".demo/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "rootDirs": [".", ".scss-types"],
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".contentlayer/generated"]
}
