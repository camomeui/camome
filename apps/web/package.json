{
  "name": "@camome/web",
  "version": "0.1.26",
  "private": true,
  "type": "module",
  "scripts": {
    "run-ts": "node -r esbuild-register",
    "watch-stories": "pnpm run-ts ./scripts/watch-stories.ts",
    "dev:next": "next dev --port 3910",
    "dev": "concurrently \"pnpm gen-scss-type -w \" \"pnpm dev:next\"",
    "build": "pnpm gen-scss-type && pnpm gen-docs-data && next build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "pnpm gen-scss-type && tsc",
    "gen-scss-type": "typed-scss-modules \"src/**/*.module.scss\" --aliasPrefixes.@ src --outputFolder .scss-types --nameFormat none --exportType default --logLevel error",
    "gen-docs-data": "tsx ./scripts/gen-docs-data.ts"
  },
  "dependencies": {
    "@camome/core": "workspace:*",
    "@camome/system": "workspace:*",
    "@camome/utils": "workspace:*",
    "@floating-ui/react": "^0.14.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.10",
    "@mdx-js/loader": "^2.1.5",
    "@mdx-js/react": "^2.1.5",
    "@next/bundle-analyzer": "^13.1.5",
    "@next/mdx": "^13.0.0",
    "camome": "workspace:*",
    "contentlayer": "^0.2.9",
    "esbuild-sass-plugin": "^2.4.5",
    "form-data": "^4.0.0",
    "image-size": "^1.0.2",
    "lodash.sortby": "^4.7.0",
    "mailgun.js": "^8.0.1",
    "markdown-wasm": "^1.2.0",
    "mdx-bundler": "^9.2.1",
    "next": "13.1.6",
    "next-contentlayer": "^0.2.9",
    "next-seo": "^5.5.0",
    "next-themes": "^0.2.1",
    "next-translate": "^1.6.0",
    "react-hook-form": "^7.40.0",
    "react-icons": "^4.4.0",
    "react-wrap-balancer": "^0.4.0",
    "rehype-external-links": "^2.0.1",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.31.3",
    "undent": "^0.1.0"
  },
  "devDependencies": {
    "@camome/storybook": "workspace:*",
    "@types/lodash.sortby": "^4.7.7",
    "@types/node": "18.7.14",
    "@types/yargs": "^17.0.17",
    "autoprefixer": "^10.4.13",
    "chokidar": "^3.5.3",
    "eslint": "8.23.0",
    "eslint-config-next": "13.0.0",
    "hastscript": "^7.1.0",
    "postcss": "^8.4.20",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^7.8.3",
    "react-docgen": "6.0.0-alpha.4",
    "react-docgen-typescript": "^2.2.2",
    "sass": "^1.55.0",
    "yargs": "^17.6.2"
  }
}
