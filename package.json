{
  "name": "@camome/global",
  "version": "0.1.0",
  "private": true,
  "description": "Light weight, accessibleUI framework for React and CSS",
  "homepage": "https://camome.net",
  "author": {
    "name": "Matsura Yuma",
    "email": "lemonburst1958@gmail.com",
    "url": "https://rubiq.vercel.app"
  },
  "scripts": {
    "run-ts": "node -r esbuild-register",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:web": "pnpm build --scope=@camome/web",
    "typecheck": "pnpm -F \"./apps/*\" -F \"./packages/*\" -r --parallel typecheck",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/.eslint-cache --max-warnings=0 .",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --cache --check .",
    "format:fix": "prettier --cache --write .",
    "ci:check": "concurrently \"pnpm typecheck\" \"pnpm lint\" \"pnpm format\"",
    "ci:test": "jest",
    "ci:publish": "pnpm build --filter=\"./packages/*\" && pnpm changeset publish",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@playwright/test": "^1.30.0",
    "@sucrase/jest-plugin": "^3.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "18.11.18",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.18",
    "esbuild-register": "^3.4.2",
    "eslint": "8.33.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "globby": "^13.1.3",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "prettier": "^2.8.3",
    "sucrase": "^3.29.0",
    "tsx": "^3.12.2",
    "turbo": "^1.7.2",
    "typed-scss-modules": "^7.0.2",
    "typescript": "4.9.5",
    "wait-on": "^7.0.1"
  }
}
